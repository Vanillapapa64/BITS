generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  username String @unique
  password String 
  age Int 
  gender Gender @default(None)
  appointments Appointments[]
  medicalrecord MedicalRecord[]
}
enum Gender{
  None
  Male
  Female
}
model Hospital{
  id Int @id @default(autoincrement())
  name String @unique
  password String 
  location String
  speciality Speciality @default(Multipspeciality)
  appointments Appointments[]
  maxAppointments Int
}
enum Speciality{
  Multipspeciality
  Eye
  ENT
  Heart
  Gastric
  Psychiatry
  Dermatology
  Dental
  Cardiology
}
model Appointments {
  id Int @id @default(autoincrement())
  patient User @relation(fields: [patientId], references: [id])
  patientId Int
  hospitalId Int
  hospital Hospital @relation(fields:[hospitalId],references: [id])
  time DateTime
  createdAt      DateTime        @default(now())
  status         AppointmentStatus @default(Scheduled)
  severity Severity @default(Low)
  @@unique([patientId, hospitalId, time])
  @@index([hospitalId])
  @@index([patientId])
}
enum AppointmentStatus {
  Scheduled
  Completed
  Cancelled
  NoShow
}
enum Severity{
  Low
  Medium
  High
  Emergency
}
model MedicalRecord {
  id Int @id @default(autoincrement())
  patientId Int
  patient User @relation(fields: [patientId], references: [id])
  reportDate String?
  hemoglobin Decimal?
  rbcCount Decimal?
  mcv Decimal?
  neutrophils Decimal?
  lymphocytes Decimal?
  SGPT Decimal?
  SGOT Decimal?
  GGTP Decimal?
  Albumin Decimal?
  Protein Decimal?
  Globulin Decimal?
  severity Severity @default(Low)
  summary String
  @@index([patientId])
}